# MODES ------------------------------------------------------------------------

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# OFFICE MODE
set $mode_office Office (l) libreoffice, (c) calc, (w) word, (i) impress
mode "$mode_office" {
    bindsym l exec libreoffice, mode "default"
    bindsym c exec libreoffice --calc, mode "default"
    bindsym w exec libreoffice --writer, mode "default"
    bindsym i exec libreoffice --impress, mode "default"


    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+o mode "$mode_office"

# QUICK MODE
set $mode_quick Postman (p), Skype4Linux (s), Slack (l), Spotify+Blockify (m), Rain (r)
mode "$mode_quick" {
    bindsym f exec /opt/google/chrome/google-chrome --profile-directory=Default --app-id=fhbjgbiflinjbdggehcddcbncdddomop, mode "default"
    bindsym l exec slack, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+q mode "$mode_quick"

# BROWSER MODE
set $mode_browser Browser (f) Firefox, (c) Chrome
mode "$mode_browser" {
    bindsym f exec firefox, mode "default"
    bindsym c exec chromium, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_browser"

# IDE MODE
set $mode_ide IDE (e) Eclipse, (n) NetBeans, (v) GVim, (i) idea
mode "$mode_ide" {

    bindsym e exec /home/dpokusa/eclipse/jee-neon/eclipse/eclipse, mode "default"
    bindsym n exec netbeans, mode "default"
    bindsym v exec gvim, mode "default"
    bindsym i exec idea.sh, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+i mode "$mode_ide"


# SCREEN MODE
set $mode_screen (s) Standalone, (e) Euvic Katowice, (h) Home, (t) Tv Kato Office
mode "$mode_screen" {
	
    bindsym e exec /home/dpokusa/.screenlayout/euvic-office.sh, mode "default"
    bindsym s exec /home/dpokusa/.screenlayout/local.sh, mode "default"
    bindsym h exec /home/dpokusa/.screenlayout/home.sh, mode "default"
    bindsym t exec /home/dpokusa/.screenlayout/euvic-conference-tv.sh, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$mode_screen"

#EXIT MODE
set $mode_exit CHOOSE: (l) lock, (s) shutdown, (q) logout, (r) reboot, (h) hibernate
mode "$mode_exit" {

	
    bindsym l exec /home/dpokusa/.config/i3/i3exit lock, mode "default"
    bindsym s exec /home/dpokusa/.config/i3/i3exit shutdown, mode "default"
    bindsym q exec /home/dpokusa/.config/i3/i3exit logout, mode "default"
    bindsym r exec /home/dpokusa/.config/i3/i3exit reboot, mode "default"
    bindsym h exec /home/dpokusa/.config/i3/i3exit hibernate, mode "default"
    
    bindsym Return mode "default"
    bindsym Escape mode "default"

}
bindsym $mod+x mode "$mode_exit"

